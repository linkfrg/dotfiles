{
  layout = {
    gaps = 16;

    center-focused-column = "never";

    preset-column-widths = [
      {proportion = 0.33333;}
      {proportion = 0.5;}
      {proportion = 0.66667;}
    ];

    default-column-width = {proportion = 0.5;};

    focus-ring = {
      width = 2;
      active = {color = "#7fc8ff";};
      inactive = {color = "#505050";};
    };

    shadow = {
      enable = true;
      softness = 30;
      spread = 4;
    };
  };
}
